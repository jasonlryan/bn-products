{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "products": {
      "type": "object",
      "patternProperties": {
        "^[0-9]{2}_[a-z_]+$": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "type": { 
              "type": "string",
              "enum": ["PRODUCT", "SERVICE"]
            },
            "stages": {
              "type": "object",
              "properties": {
                "foundation": {
                  "type": "object",
                  "properties": {
                    "manifesto": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/manifestoContent" }
                      ]
                    },
                    "functional_spec": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/functionalSpecContent" }
                      ]
                    },
                    "audience_icps": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/audienceContent" }
                      ]
                    }
                  }
                },
                "planning": {
                  "type": "object",
                  "properties": {
                    "user_stories": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/userStoriesContent" }
                      ]
                    },
                    "competitor_sweep": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/competitorContent" }
                      ]
                    },
                    "tam_sizing": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/tamContent" }
                      ]
                    }
                  }
                },
                "research": {
                  "type": "object",
                  "properties": {
                    "prd_skeleton": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/prdContent" }
                      ]
                    },
                    "ui_prompt": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/uiPromptContent" }
                      ]
                    }
                  }
                },
                "build": {
                  "type": "object",
                  "properties": {
                    "generate_screens": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/screensContent" }
                      ]
                    },
                    "landing_page_copy": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/landingContent" }
                      ]
                    },
                    "key_messages": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/messagesContent" }
                      ]
                    }
                  }
                },
                "demo": {
                  "type": "object",
                  "properties": {
                    "investor_deck": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/investorContent" }
                      ]
                    },
                    "demo_script": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/scriptContent" }
                      ]
                    },
                    "slide_headlines": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/headlinesContent" }
                      ]
                    },
                    "qa_prep": {
                      "allOf": [
                        { "$ref": "#/definitions/stage" },
                        { "$ref": "#/definitions/qaContent" }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "stage": {
      "type": "object",
      "properties": {
        "file_metadata": {
          "type": "object",
          "properties": {
            "file_path": { 
              "type": "string",
              "pattern": "^[0-9]{2}_[a-z_]+_[0-9]{2}_[a-z_]+\\.md$"
            },
            "generated_date": { "type": "string" },
            "model": { "type": "string" },
            "status": {
              "type": "string",
              "enum": ["draft", "review", "approved"]
            },
            "visibility": {
              "type": "string",
              "enum": ["public", "internal"]
            }
          },
          "required": ["file_path", "generated_date", "model"]
        },
        "generation_metadata": {
          "type": "object",
          "properties": {
            "prompt_used": { "type": "string" },
            "context_used": {
              "type": "array",
              "items": { "type": "string" }
            },
            "previous_outputs": { "type": "integer" }
          }
        }
      },
      "required": ["file_metadata"]
    },
    "manifestoContent": {
      "type": "object",
      "properties": {
        "problem": { "type": "string" },
        "audience": { "type": "string" },
        "solution": { "type": "string" },
        "magic_moment": { "type": "string" },
        "why_excited": { "type": "string" }
      }
    },
    "functionalSpecContent": {
      "type": "object",
      "properties": {
        "overview": { "type": "string" },
        "inputs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "process": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "step": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "limitations": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "audienceContent": {
      "type": "object",
      "properties": {
        "icps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "profile": { "type": "string" },
              "motivations": { "type": "string" },
              "pain_points": { "type": "string" },
              "typical_day": { "type": "string" },
              "success_looks_like": { "type": "string" }
            }
          }
        }
      }
    },
    "userStoriesContent": {
      "type": "object",
      "properties": {
        "stories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "as_a": { "type": "string" },
              "i_want": { "type": "string" },
              "so_that": { "type": "string" },
              "priority": { "type": "integer" }
            }
          }
        }
      }
    },
    "competitorContent": {
      "type": "object",
      "properties": {
        "competitors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "value_prop": { "type": "string" },
              "pricing": { "type": "string" },
              "strength": { "type": "string" },
              "weakness": { "type": "string" },
              "gap_we_exploit": { "type": "string" }
            }
          }
        }
      }
    },
    "tamContent": {
      "type": "object",
      "properties": {
        "market_size": {
          "type": "object",
          "properties": {
            "total": { "type": "string" },
            "equation": { "type": "string" },
            "assumptions": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "segments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "size": { "type": "string" },
              "growth_rate": { "type": "string" }
            }
          }
        }
      }
    },
    "prdContent": {
      "type": "object",
      "properties": {
        "goal": { "type": "string" },
        "personas": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "characteristics": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "mvp": {
          "type": "object",
          "properties": {
            "features": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "success_metrics": {
          "type": "array",
          "items": { "type": "string" }
        },
        "risks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": { "type": "string" },
              "mitigation": { "type": "string" }
            }
          }
        }
      }
    },
    "uiPromptContent": {
      "type": "object",
      "properties": {
        "design_system": {
          "type": "object",
          "properties": {
            "colors": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "hex": { "type": "string" },
                  "usage": { "type": "string" }
                }
              }
            },
            "typography": {
              "type": "object",
              "properties": {
                "font_family": { "type": "string" },
                "styles": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "size": { "type": "string" },
                      "weight": { "type": "string" },
                      "usage": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        },
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "props": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "screensContent": {
      "type": "object",
      "properties": {
        "screens": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "layout": { "type": "string" },
              "components": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string" },
                    "props": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "landingContent": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "headline": { "type": "string" },
            "subheadline": { "type": "string" },
            "cta": { "type": "string" }
          }
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "content": { "type": "string" }
            }
          }
        },
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "messagesContent": {
      "type": "object",
      "properties": {
        "primary_message": { "type": "string" },
        "supporting_messages": {
          "type": "array",
          "items": { "type": "string" }
        },
        "value_props": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "headline": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "investorContent": {
      "type": "object",
      "properties": {
        "slides": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "content": { "type": "string" },
              "notes": { "type": "string" }
            }
          }
        },
        "key_metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "metric": { "type": "string" },
              "value": { "type": "string" }
            }
          }
        }
      }
    },
    "scriptContent": {
      "type": "object",
      "properties": {
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "duration": { "type": "string" },
              "script": { "type": "string" },
              "visuals": { "type": "string" }
            }
          }
        }
      }
    },
    "headlinesContent": {
      "type": "object",
      "properties": {
        "slides": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "slide_number": { "type": "integer" },
              "headline": { "type": "string" },
              "key_points": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "qaContent": {
      "type": "object",
      "properties": {
        "categories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "category": { "type": "string" },
              "questions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "question": { "type": "string" },
                    "answer": { "type": "string" },
                    "supporting_points": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
} 